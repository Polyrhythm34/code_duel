<head>  
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' /> 
</head>  

 <body>  
   <h1><%= title %></h1>
   <h3>Welcome to <%= title %></h3>
   
   <% if (scripts.length === 0) { %>
    <h1>There are currently no scripts in the database</h1>
    <p><a data-toggle="modal" href="#addModal">Add a Script</a></p>
  <% } else { %>
    <h1>Scripts</h1>
    <div>
        <a data-toggle="modal" href="#addModal">Add a Script</a>
      <table class="table table-bordered table-hover">
        <thead align="left">
          <th>Id</th>
          <th>Code</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        </thead>
        <tbody>
        <% for (var source of scripts) { %>
        <tr>
          <td><%= source._id %></td>
          <td><%= source.code %></td>
          <td><a data-toggle="modal" href="#editModal<%=source._id%>">edit</a></td>
          <td><a data-toggle="modal" href="#deleteModal<%=source._id%>">delete</a></td>
        </tr>
            <!-- Delete Modal -->
          <div class="modal fade" id="deleteModal<%=source._id%>" role="dialog">
            <div class="modal-dialog">
        
              <!-- Modal content -->
              <div class="modal-content">
                <div class="modal-header">
                  <h4 style="color:red;"><span class="glyphicon glyphicon-lock"></span> Delete a Script</h4>
                </div>
                <div class="modal-body">
                    <form role="form" action="/admin/delete/<%=source._id%>" method="post">
                        <div class="form-group">
                        <input class="form-control" type="text" name="_id" value="<%=source._id%>"/>
                        </div>
                        <button type="submit" class="btn btn-default btn-danger btn-block" ><span class="glyphicon glyphicon-off"></span>Delete</button>
                    </form>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                </div>
              </div>
            </div>
          </div>
          
         <!-- Add Modal -->
          <div class="modal fade" id="editModal<%=source._id%>" role="dialog">
            <div class="modal-dialog">
        
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <h4 style="color:red;"><span class="glyphicon glyphicon-lock"></span> Edit a Script</h4>
                </div>
                <div class="modal-body">
                  <form role="form" action="/admin/save" method="post">
                    <div class="form-group">
                      <input class="form-control" type="text" name="_id" value="<%=source._id%>"/>
                      <label for="code"><span class="glyphicon glyphicon-user"></span> Script</label>
                      <textarea class="form-control" name="code"><%=source.code%></textarea>
                    </div>
                    <button type="submit" class="btn btn-default btn-success btn-block" ><span class="glyphicon glyphicon-off"></span>Edit Script</button>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                </div>
              </div>
            </div>
          </div>  
        <% } %>
        </tbody>
      </table>
    </div>
  <% } %>
  
  
  <!-- Add Modal -->
  <div class="modal fade" id="addModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 style="color:red;"><span class="glyphicon glyphicon-lock"></span> Add a Script</h4>
        </div>
        <div class="modal-body">
          <form role="form" action="/admin/save" method="post">
            <div class="form-group">
              <label for="code"><span class="glyphicon glyphicon-user"></span> Script</label>
              <textarea class="form-control" name="code" placeholder="Script goes here"></textarea>
            </div>
            <button type="submit" class="btn btn-default btn-success btn-block" ><span class="glyphicon glyphicon-off"></span>Add Script</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
        </div>
      </div>
    </div>
  </div> 

  

 </body>
 <footer>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
 </footer>